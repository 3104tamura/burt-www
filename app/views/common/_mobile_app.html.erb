<section class="app-store-main">
   <div class="container">
      <div class="row">
         <div class="col-xs-12 col-sm-8 col-md-7 pull-right">
            <header>
               <h2><strong>DOWNLOAD</strong> MOBILE APP</h2>
               <p>現在開発中の為リリースまでもうしばらくお待ちください。</p>
            </header>
            <div class="row inner app-icons">
               <div class="col-xs-6 col-md-4">
                  <a href="#" class="app-store">
                     <%= image_tag 'android', alt: 'Google play' %>
                     <span>download on</span>
                     <h4>Google Play</h4>
                  </a>
               </div>
               <div class="col-xs-6 col-md-4">
                  <a href="#" class="app-store">
                     <%= image_tag 'apple', alt: 'Apple store' %>
                     <span>download on</span>
                     <h4>Apple Store</h4>
                  </a>
               </div>

            </div>
         </div>
         <div class="hidden-xs col-sm-4 col-md-5 pull-right">
            <div class="action-mock">
               <%= image_tag 'app-mock', alt: 'download apps' %>
            </div>
         </div>
      </div>
   </div>
</section>
